{
  "compilerOptions": {
    "rootDir": "public",
    "strict": true,
    "strictFunctionTypes": false,
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "lib": [ "dom", "es6", "dom.iterable", "es2017" ],
    "pretty": true,
    "noImplicitThis": false
  },
  "exclude": [
    "**/node_modules/*",
    "tests"
  ]
}
